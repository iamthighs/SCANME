@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="bg-img-cover" style="background-image: url('/new/assets/img/bg-scene.svg')">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container-xl px-4">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-11">

                            <!-- Social forgot password form-->
                            <div class="card my-5 rounded-xl">
                                <div class="card-body p-5 text-center"><div class="h3 fw-light mb-0">@ViewData["Title"]</div></div>
                                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                                <hr class="my-0" />
                                <div class="card-body p-5">
                                    <div class="text-center small text-muted mb-4">Enter your email address below and we will send you a link to reset your password.</div>
                                    <!-- Forgot password form-->
                                    <form method="post">
                                        <!-- Form Group (email address)-->
                                        <div class="mb-3">
                                            <label class="text-gray-600 small" for="emailExample">Email address</label>
                                            <input asp-for="Input.Email" class="form-control form-control-solid" placeholder="" aria-label="Email Address" aria-describedby="emailExample" />
                                        </div>
                                        <!-- Form Group (reset password button)    -->
                                        <button class="btn btn-primary" type="submit">Reset Password</button>
                                    </form>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body px-5 py-4">
                                    <div class="small text-center">
                                        New user?
                                        <a asp-area="Identity" asp-page="/Account/Register">Create an account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <partial name="_NewFooterV2" />
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
