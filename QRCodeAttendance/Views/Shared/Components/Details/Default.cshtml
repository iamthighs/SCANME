@model IEnumerable<Sample>

@foreach(var user in Model)
{
<!--Details Modal -->
<div class="modal fade" id="detailsModal_@user.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
				<button class="btn btn-sm btn-primary-soft text-primary generate-pdf-button" data-id="@user.Id">
					<i class="me-1" data-feather="download"></i>
						Generate PDF
				</button>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
			<div id="element-to-print_@user.Id" class="modal-body row justify-content-center">
				<div class="card shadow-none rounded-xl border-dark m-3" style="width:6.75in;height:4.25in">
					<div class="card-body row justify-content-center">
						<div class="col-xxl-12 col-xl-12">
							<div class="row justify-content-center">
								<div class="row justify-content-center mb-2">
									<div class="col-2 m-0 p-0">
										<img class="img-account-profile rounded-circle" src="~/new/assets/img/tup-logo.png" style="width:1in;height:1in" alt="" />
									</div>
									<div class="col-8 text-center m-0 p-0">
										<div class="m-0 p-0 small">Republic of the Phlippines</div>
										<div class="m-0 p-0 small">TECHNOLOGICAL UNIVERSITY OF THE PHILIPPINES</div>
										<div class="m-0 p-0 small">Ayala Boulevard Ermita, Manila, 1000</div>
										<div class="m-0 p-0 small">www.tup.edu.ph</div>
									</div>
									<div class="col-2 m-0 p-0">
										<img class="img-account-profile" src="~/new/assets/img/SCANME5.png" alt="" style="width:1in;height:1in" />
									</div>
								</div>
								<div class="col-4 text-center">
									<img class="img-account-profile rounded-circle mb-2" src="~/profile/@user.ImageUrl" alt="" />
									<code>@user.Code</code>
								</div>
								<div class="col-8 card-body">
									<!-- Form Row-->
									<div class="row justify-content-center mb-1">
										<!-- Form Group (first name)-->
										<div class="col-md-4">
											<div class="small mb-0" for="inputFirstName">First name</div>
											<div class="fw-bolder text-dark" id="firstName">@user.FirstName.ToUpper()</div>
										</div>
										<!-- Form Group (middle name)-->
										<div class="col-md-4">
											<div class="small mb-0">Middle name</div>
												<div class="fw-bolder text-dark" id="middleName">@user.MiddleName.ToUpper()</div>
										</div>
										<!-- Form Group (last name)-->
										<div class="col-md-4">
											<div class="small mb-0" for="inputLastName">Last name</div>
											<div class="fw-bolder text-dark" id="lastName">@user.LastName.ToUpper()</div>
										</div>
									</div>
									<div class="row mb-1">
										<div class="col-md-6">
											<div class="small mb-0">Sex</div>
											<div class="fw-bolder text-dark" id="sex">@user.Sex.ToString().ToUpper()</div>
										</div>
										<div class="col-md-6">
											<div class="small mb-0" for="inputLastName">Birthdate</div>
											<div class="fw-bolder text-dark" id="birthDate">@user.BirthDate.ToString("MMMM dd, yyyy").ToUpper()</div>
										</div>
									</div>
									<div class="row mb-1">
										<div class="col-md-6">
											<div class="small mb-0">Department</div>
											<div class="fw-bolder text-dark" id="department">@user.Department.ToString()</div>
										</div>
										<div class="col-md-6">
											<div class="small mb-0">Course</div>
											<div class="fw-bolder text-dark" id="course">@user.Course.ToUpper()</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card shadow-none rounded-xl border-dark m-3 mb-3" style="width:6.75in;height:4.25in">
					<div class="card-body row justify-content-center">
						<div class="col-xxl-12 col-xl-12">
							<div class="row justify-content-center">
								<div class="col-3">
								</div>
								<div class="col-6" id="qrcode_@user.Id">
								</div>
								<div class="col-3">
								</div>
								<div class="mt-3 text-center">
									<input id="text_@user.Id" type="text" value="@user.Code" hidden />
									<code>@user.Code</code>
									<div class="fw-bolder text-dark">@user.FirstName.ToUpper() @user.MiddleName.ToUpper() @user.LastName.ToUpper()</div>
								</div>
							</div>
						</div>
					</div>
				</div>
            </div>
        </div>
    </div>
</div>
}